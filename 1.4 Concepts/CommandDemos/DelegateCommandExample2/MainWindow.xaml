<Window x:Class="DelegateCommandExample2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DelegateCommandExample2"
        Title="DelegateCommandExample2" Height="300" Width="400">

    <Window.InputBindings>
        <KeyBinding Command="{Binding CookDinnerCommand}" Modifiers="Ctrl" Key="C" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Command="{Binding CookDinnerCommand}" CommandParameter="Döner" Header="Cook" InputGestureText="Ctrl+C" />
                <Separator/>
                <MenuItem Command="ApplicationCommands.Close" />
            </MenuItem>
        </Menu>

        <TextBlock Text="{Binding Message, Mode=OneWay}" 
                 IsEnabled="{Binding IsCooking}"
                 Margin="5" Grid.Row="2" TextWrapping="Wrap" />
    </Grid>
</Window>