<Window x:Class="DPAddOwner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:DPAddOwner"
    Title="Property Inheritance" Height="200" Width="300"
    FontSize="{Binding ElementName=cbo,Path=SelectedItem}">
	<StackPanel>
		<ComboBox x:Name="cbo" >
			<sys:Double>10</sys:Double>
			<sys:Double>16</sys:Double>
			<sys:Double>32</sys:Double>
		</ComboBox >
		<Button Content="OK" />
		<local:TextLabel Text="My Textlabel"/>
	</StackPanel>
</Window>
