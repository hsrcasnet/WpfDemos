<Window
    x:Class="RoutedEvents.OnlyNumbers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="OnlyNumbers"
    Width="300"
    Height="300">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="3" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel
        Margin="5"
        PreviewKeyDown="OnStackPanelPreviewKeyDown"
        PreviewTextInput="OnStackPanelPreviewTextInput">

        <TextBox />
        <TextBox />
        <TextBox />
    </StackPanel>

</Window>
