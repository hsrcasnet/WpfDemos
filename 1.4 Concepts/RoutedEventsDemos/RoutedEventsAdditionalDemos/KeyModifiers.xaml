<Window
    x:Class="RoutedEvents.KeyModifiers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="KeyModifiers"
    Width="300"
    Height="300">

    <StackPanel Margin="5">
        <TextBox KeyDown="OnTextBoxKeyDown" />
        <TextBlock Name="InfoLabel" />
        <Button Click="OnButtonClick" Content="Check Current Shift State" />
    </StackPanel>
</Window>
