<Window x:Class="WpfViewbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfViewbox"
        mc:Ignorable="d"
        Title="Viewbox" Height="450" Width="800">

    <TabControl>
        <TabItem Header="Stretch=&quot;Uniform&quot; (default)">
            <Viewbox Stretch="Uniform">
                <!--Default-->
                <Button Content="I'm a Button" Width="100"/>
            </Viewbox>
        </TabItem>
        <TabItem Header="Stretch=&quot;None&quot;" >
            <Viewbox Stretch="None">
                <Button Content="I'm a Button" Width="100"/>
            </Viewbox>
        </TabItem>
        <TabItem Header="Stretch=&quot;Fill&quot;" >
            <Viewbox Stretch="Fill">
                <Button Content="I'm a Button" Width="100"/>
            </Viewbox>
        </TabItem>
        <TabItem Header="Stretch=&quot;UniformToFill&quot;" >
            <Viewbox Stretch="UniformToFill">
                <Button Content="I'm a Button" Width="100"/>
            </Viewbox>
        </TabItem>
    </TabControl>
</Window>
