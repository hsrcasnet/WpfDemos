<Window x:Class="GridSplitter.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300" MinHeight="200">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Label Background="Yellow" Grid.Column="0"/>
        <GridSplitter Grid.Column="0" Width="2" />
        <Label Background="Green" Grid.Column="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
