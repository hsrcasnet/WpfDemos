<Window
    x:Class="GridWithDefinition.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1"
    Width="300"
    Height="300"
    Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Demo: Default is Grid.Row="0", Grid.Column="0"  -->
        <Button Content="One" />
        <Button Content="Two" />
        <Button Content="Three" />
        <Button Content="Four" />

        <!--  Demo: Override default Row/Column setting  -->

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Content="One" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Content="Two" />
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Content="Three" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Content="Four" />

    </Grid>
</Window>
