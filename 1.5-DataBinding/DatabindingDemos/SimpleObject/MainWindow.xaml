<Window x:Class="SimpleObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       
        Title="Simple Object Provider" SizeToContent="Height" Width="250">
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="4" Text="First Name" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox Margin="4" Text="{Binding Path=FirstName}" Grid.Column="1" Grid.Row="0"/>

        <TextBlock Margin="4" Text="Last Name" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Margin="4" Text="{Binding Path=LastName}" Grid.Column="1" Grid.Row="1"/>

        <TextBlock Margin="4" Text="Age" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox Margin="4" Text="{Binding Path=Age}" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
