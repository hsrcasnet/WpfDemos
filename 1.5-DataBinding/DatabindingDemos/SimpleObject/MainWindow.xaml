<Window
    x:Class="SimpleObject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Simple Object Provider"
    Width="250"
    Height="150">

    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="4"
            VerticalAlignment="Center"
            Text="First Name" />
        <TextBox
            Grid.Column="1"
            Margin="4"
            Text="{Binding Path=FirstName}" />

        <TextBlock
            Grid.Row="1"
            Margin="4"
            VerticalAlignment="Center"
            Text="Last Name" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="4"
            Text="{Binding Path=LastName}" />

        <TextBlock
            Grid.Row="2"
            Margin="4"
            VerticalAlignment="Center"
            Text="Age" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="4"
            Text="{Binding Path=Age}" />
    </Grid>
</Window>
