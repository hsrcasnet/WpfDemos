<Window x:Class="WpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal">
        <ListBox x:Name="lMarke"  Width="100" ItemsSource="{Binding}" DisplayMemberPath="Marke" IsSynchronizedWithCurrentItem="True" />
        <ListBox x:Name="lModell" Width="100" ItemsSource="{Binding}" DisplayMemberPath="Modell" IsSynchronizedWithCurrentItem="True" />
        <ListBox x:Name="lPreis"  Width="100" ItemsSource="{Binding}" DisplayMemberPath="Preis" IsSynchronizedWithCurrentItem="True" />
    </StackPanel>
</Window>
