<Application x:Class="WpfCurrentCulture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WpfCurrentCulture.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <converters:DateTimeToStringConverter x:Key="DateTimeToShortStringConverter" Format="f"/>
            <converters:DateTimeToStringConverter x:Key="DateTimeToLongStringConverter" Format="F"/>
            <converters:DecimalToStringConverter x:Key="DecimalToStringConverter" Format="N2"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
